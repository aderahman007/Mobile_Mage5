<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TransaksiFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/telpon"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/chat2"
            android:layout_marginLeft="200dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textAlignment="center">
            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="55dp"
                android:text="Alifuddin Fajri"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"

                />
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="alifuddinfajri@gmail.com"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:textAlignment="center"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="280dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/edit_profil"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/edit_profil"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <ImageView
            android:id="@+id/riwayat_invest"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/edit_riwayat_invest"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingRight="50dp"/>
        <ImageView
            android:id="@+id/info_saldo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/edit_info_saldo"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <ImageView
            android:id="@+id/hub_kami"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/edit_hub_kami"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <ImageView
            android:id="@+id/scema_permodalan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/edit_scema_permodalan"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <ImageView
            android:id="@+id/keluar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/edit_keluar"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingRight="245dp"/>




    </LinearLayout>



</RelativeLayout>